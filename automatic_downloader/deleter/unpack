#!/bin/sh

. config/options $1

[ -d $BUILD/$PKG_NAME-$PKG_VERSION ] && rm -rf $BUILD/$PKG_NAME-$PKG_VERSION
mkdir -p $BUILD/$PKG_NAME-$PKG_VERSION
tar -xzf $SOURCES/$PKG_NAME/$PKG_VERSION.tar.gz -C $BUILD/$PKG_NAME-$PKG_VERSION
mv $BUILD/$PKG_NAME-$PKG_VERSION/deleter*/*	 $BUILD/$PKG_NAME-$PKG_VERSION
rm -rf $BUILD/$PKG_NAME-$PKG_VERSION/deleter*
