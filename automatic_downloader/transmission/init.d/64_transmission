# start transmission daemon
#
# runlevels: openelec, textmode

if [ ! -e /storage/videos ] ; then
	mkdir -p /storage/videos
fi

if [ ! -e /storage/torrent ] ; then
        ln -s /storage/videos /storage/torrent
fi

if [ ! -e /storage/incoming ] ; then
        mkdir -p /storage/incoming
fi

if [ ! -e /storage/watch ] ; then
        mkdir -p /storage/watch
fi
if [ ! -e /storage/.transmission-daemon ] ; then
	mkdir -p /storage/.transmission-daemon
	cp /etc/transmission-daemon/settings.json /storage/.transmission-daemon
fi

progress "start transmission daemon"
  /bin/transmission-daemon -w /storage/videos -g /storage/.transmission-daemon --incomplete-dir /storage/incoming --watch-dir /storage/watch -a '*.*.*.*' -T 
